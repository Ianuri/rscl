

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de nuevo empleado
                    <small>.</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">

            <br>

            <div class="col-md-offset-1 col-lg-offset-1 col-md-10 col-lg-10">
                
                  <%= form_for(@trabajadores, :url => {:action=>"create", :controller=>"trabajador"}, :method => :post) do |f| %>
                  <br>

                  <div class="field form-group", id: 'frmNombres'>
                    <%= f.label :Nombres, for: 'txtNombres' %><br>
                    <%= f.text_field :Nombres, id: 'txtNombres', class: 'form-control', required: 'true' %>
                  </div>
                  <div class="field form-group", id: 'frmApellido'>
                    <%= f.label :Apellidos, for: 'txtApellido' %><br>
                    <%= f.text_field :Apellidos, id: 'txtApellido', class: 'form-control', required: 'true' %>
                  </div>
                  <div class="field form-group", id: 'frmDireccion'>
                    <%= f.label :Direccion, for: 'txtDireccion' %><br>
                    <%= f.text_field :Direccion, id: 'txtDireccion', class: 'form-control', required: 'true' %>
                  </div>
                  <div class="field form-group", id: 'frmAfp'>
                    <%= f.label :Afp, for: 'cboAfp' %><br>
                    <%= f.select :idAfp, options_for_select([['Recepcionista', 'Recepcionista'], ['Secretaria', 'Secretaria'], ['Gerente', 'Gerente'], ['Asistente', 'Asistente'], ['Admin', 'Admin']]), {}, {required: 'true', id: 'cboAfp', class: 'form-control'} %>
                  </div>
                  <div class="field form-group", id: 'frmBasico'>
                    <%= f.label :Basico, for: 'txtBasico' %><br>
                    <%= f.text_field :Basico, id: 'txtBasico', class: 'form-control', required: 'true' %>
                  </div>
                  <div class="actions">
                    <%= f.submit class: 'btn btn-info btn-lg' %>
                  </div>
                <% end %>

          </div>

      <br> 
      
        </div>
        <!-- /.row -->

       


 